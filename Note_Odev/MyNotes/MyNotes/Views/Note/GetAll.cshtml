@model IEnumerable<MyNotes.Models.Note>

@{
    ViewBag.Title = "My Notes";
}

<h2>GetAll</h2>
<hr />

@using (Html.BeginForm("Search", "Note", FormMethod.Get))
{
    <div class="row g-3 align-items-center">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group">
                    <label class="m-3">Search:    </label>
                    <input type="text" class="form-control" id="search" name="search" />
                    <input type="submit" value="Search" class="btn btn-success mr-2" />
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Star", "Note", FormMethod.Get))
{
    <div class="row g-3 align-items-center">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group">
                    <label class="m-3">Message with star: </label>
                    @Html.ActionLink("Star", "Star", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Get All", "GetAll", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoteHeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsStar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoteHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStar)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "d-block btn btn-outline-secondary mt-1 mb-1" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "d-block btn btn-outline-secondary mb-1" })
            </td>
        </tr>
    }

</table>
